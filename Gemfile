source "https://rubygems.org"

# This will help ensure the proper Jekyll version is running.
gem "jekyll", "~> 4.0.0"

group :jekyll_plugins do
  gem 'jekyll-paginate'
  gem 'jekyll-sitemap'
end

# Ruby 3.4+ 호환성을 위해 추가된 gem들
gem "csv"
gem "base64"
gem "bigdecimal"
gem "webrick"

# Windows 환경 자동 업데이트 성능 향상을 위해 추가
gem 'wdm', '>= 0.1.0' if Gem.win_platform?